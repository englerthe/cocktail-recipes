<h1>Here you can delete your recipe</h1>

<ul>
  {{#each RecipeFromDB}}
  <li> 
    <h3> <a href="/my-recipes/{{this._id}}"> {{ this.title }} </a></h3> 
    <p>- posted by {{ this.owner.username }}</p>
    <img src="{{this.imageUrl}}" alt="" width="300">
    {{#if this.isOwner}}
      <form action="/recipes/{{this._id}}/delete" method="POST">
        <button type="submit">Delete</button>
      </form>
    {{/if}}
  </li>
  {{/each}}
</ul>